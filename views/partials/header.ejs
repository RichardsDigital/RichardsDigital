    <script>

            var isOpen = false;
            
            function openNav(carrier, sidenav) {

                carrier.style.left = '-340px';
                carrier.style.right = '340px';
                sidenav.style.width = '340px';
                
                document.getElementsByClassName('allElements')[0].style.opacity = '1';
            }

            function closeNav(carrier, sidenav) {
                
                carrier.style.left = '0';
                carrier.style.right = '0';
                sidenav.style.width = '0';
                document.getElementsByClassName('allElements')[0].style.opacity = '0';
            }
        
        document.getElementsByClassName('hamburger')[0].addEventListener('click', () => {

            var carrier = document.getElementsByClassName('carrier')[0];
            var sidenav = document.getElementsByClassName('sidenav')[0];

            if (isOpen === false) {
                openNav(carrier, sidenav);
                isOpen = true;
                document.getElementsByClassName('hamburger')[0].classList.add('is-active');
            } 
            else {
                closeNav(carrier, sidenav);
                isOpen = false;
                document.getElementsByClassName('hamburger')[0].classList.remove('is-active');
            }
        });
        
    </script>
